@model NutritionWatcher.Models.ConsumptionModel
@{
    ViewBag.Title = "Delete";
}

<div class="container-center">
    @using (Html.BeginForm("DeleteDataBase", "Consumption", new { id = Model.Id }, FormMethod.Post, new { }))
    {
        <h1 style="text-align: center;">Biztosan törölni szeretnéd a(z) @Model.Date-i napot?</h1>
        <div class="group">
            <input type="submit" name="send" class="btn danger" value="Törlés" />
        </div>
        <div class="group">
            <a href="@Url.Action("ShowConsumption", "Consumption", new { id = Model.Id })" class="link-btn btn primary">Mégse</a>
        </div>
    }
</div>

